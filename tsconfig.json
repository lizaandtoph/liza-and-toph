{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/src/*"
      ],
      "~/*": [
        "server/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "server",
    "client/src",
    "client/index.html"
  ]
}